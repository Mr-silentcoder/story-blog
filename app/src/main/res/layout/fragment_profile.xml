<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/ic_logo_white"
                tools:ignore="VectorDrawableCompat" />

            <EditText
                android:id="@+id/userNameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/textbox_white"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/liteblack"
                android:textColorHint="#C1BFBF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailBoxedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/textbox_white"
                android:drawableLeft="@drawable/ic_email"
                android:drawableRight="@android:drawable/ic_lock_lock"
                android:drawablePadding="15dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/liteblack"
                android:textColorHint="#C1BFBF" />

            <EditText
                android:id="@+id/oldPasswordBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/textbox_white"
                android:drawableLeft="@drawable/ic_passwd"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="old Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/liteblack"
                android:textColorHint="#C1BFBF" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/textbox_white"
                android:drawableLeft="@drawable/ic_passwd"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/liteblack"
                android:textColorHint="#C1BFBF" />

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_red"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:text="Update"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#FB4308" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_red"
                android:padding="10dp"
                android:text="log out"
                app:backgroundTint="#D61314" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>